{
  "name": "thunder-payment-channel",
  "version": "1.0.0",
  "description": "Payment channels implementation on Ethereum using THD tokens",
  "main": "src/thunderd.js",
  "scripts": {
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "clean": "npx hardhat clean",
    "thunderd": "node src/thunderd.js",
    "thunderd:dev": "node src/thunderd.js --port 2001",
    "thunder-cli": "node src/thunder-cli.js",
    "mine-blocks": "npx hardhat run scripts/mine-blocks.js --network localhost",
    "build": "npm run compile",
    "start": "npm run thunderd",
    "dev": "npm run thunderd:dev",
    "build:exe": "./build.sh",
    "pkg:install": "npm install -g pkg"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "artifacts/**/*",
      "node_modules/axios/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ]
  },
  "bin": {
    "thunderd": "./src/thunderd.js",
    "thunder-cli": "./src/thunder-cli.js"
  },
  "keywords": [
    "ethereum",
    "payment-channels",
    "blockchain",
    "lightning",
    "web3",
    "smart-contracts",
    "defi",
    "layer2"
  ],
  "author": "Thunder Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://learn.zone01dakar.sn/git/alassall/payment-channel.git"
  },
  "bugs": {
    "url": "https://learn.zone01dakar.sn/git/alassall/payment-channel/issues"
  },
  "homepage": "https://learn.zone01dakar.sn/git/alassall/payment-channel#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.24.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "axios": "^0.27.2",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.1",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "web3": "^4.16.0"
  }
}
